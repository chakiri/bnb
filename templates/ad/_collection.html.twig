{# DÃ©finir l'affichage d'images#}
{% block _ad_images_widget %}
    {{ form_widget(form) }}

    <input type="hidden" id="widgets_counter" value="0">

    <button type="button" id="add_image" class="btn btn-primary float-right">Ajouter une image</button>
{% endblock %}

{# Definir l'affcihage des entry d'images#}
{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-link float-right">Supprimer l'image</button>
            </div>
        </div>

    </div>
{% endblock %}

{# Afin que chaque entry affiche que le widget et non plus le label#}
{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}
